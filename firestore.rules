rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Liked tracks subcollection
      match /likedTracks/{trackId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Playlists
    match /playlists/{playlistId} {
      allow read: if resource.data.isPublic == true || request.auth.uid == resource.data.createdBy;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }

    // Tracks (uploaded music metadata)
    match /tracks/{trackId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uploadedBy;
    }
  }
}
